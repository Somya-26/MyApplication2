<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.userpc.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingLeft="5dp"
        android:text="PATEL PUBLIC SCHOOL"
        android:id="@+id/name"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:src="@drawable/school"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_below="@+id/name"
        android:layout_marginTop="5sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/imageView"
        android:layout_marginTop="5sp"
        android:paddingLeft="5dp"
        android:text="AFFILIATED to CBSE"
        android:id="@+id/cbse"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/imageView"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="70sp"
        android:text="Contact description"
        android:id="@+id/contact"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/contact"
        android:id="@+id/phone"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="90sp"
        android:text="Phone: 01762 225 298"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/phone"
        android:id="@+id/address"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="70sp"
        android:text="Address Details" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/address"
        android:id="@+id/colony"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="90sp"
        android:text="PMN Collage Road, Shaheed Bhagat Singh Colony, Rajpura"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/colony"
        android:id="@+id/city"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="70sp"
        android:text="District" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/city"
        android:id="@+id/district"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="90sp"
        android:text="Patiala,Punjab"/>
</RelativeLayout>
